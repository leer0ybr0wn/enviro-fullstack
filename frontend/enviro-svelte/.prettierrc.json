{
	"$schema": "https://json.schemastore.org/prettierrc",
	"printWidth": 180,
	"semi": false,
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": true,
	"singleAttributePerLine": false,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"svelteSortOrder": "markup-scripts-styles"
}
